[Unit]
Description=Cloud DAQ FastAPI
After=network.target cloud-catcher.service
Requires=cloud-catcher.service

[Service]
User=meshdaq
Group=meshdaqdevs
WorkingDirectory=/opt/projects/iot-wireless-mesh-daq/cloud
ExecStart=/opt/projects/iot-wireless-mesh-daq/cloud/.venv/bin/uvicorn apps.main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=cloud.target
