# deploy/env/cloud.env.example
TZ=America/Chicago

# App
CLOUD_API_PORT=8000
SEED_SITEARRAY_NAME=TEST
SCHEMA_VERSION=ss_v1

# NATS
NATS_URL=nats://nats:4222

# Postgres connectivity (your app reads these, not DATABASE_URL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ss
POSTGRES_USER=ss
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis connectivity
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# IMPORTANT: Standardize on DB 3 for your app data
REDIS_DB=3

# Embed token protection
EMBED_SECRET=CHANGE_ME_RANDOM_SECRET
# Optional safety switch if you ever want to bypass token checks temporarily:
# EMBED_ENFORCEMENT=1
